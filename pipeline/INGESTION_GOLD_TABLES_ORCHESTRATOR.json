					"source": {
						"type": "SqlPoolSource",
						"sqlReaderQuery": "SELECT\ncount(*) as updates\nFROM\njarvis_ctrl_ingestion_goldtables T\nJOIN\njarvis_sync_control C ON C.table_name = REPLACE(t.table_name,'STG_','') AND T.last_update < C.SILVER_UPDATE\nWHERE\nt.ACTIVE  = 1\nAND\nt.TP_TABLE IN('STG') ",
						"queryTimeout": "02:00:00"
					},
					"dataset": {
						"referenceName": "SqlDedicatedPool",
						"type": "DatasetReference",
						"parameters": {
							"table_name_select": "jarvis_ctrl_ingestion_goldtables"
						}
					}
				}
			},
			{
				"name": "UPDATE CONDITIONAL",
				"type": "IfCondition",
				"dependsOn": [
					{
						"activity": "UPDATES COUNT",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"userProperties": [],
				"typeProperties": {
					"expression": {
						"value": "@if(greater(activity('UPDATES COUNT').output.firstRow.updates,0),'TRUE','FALSE')",
						"type": "Expression"
					},
					"ifTrueActivities": [
						{
							"name": "STAGES UPDATE",
							"type": "ExecutePipeline",
							"dependsOn": [],
