{
	"name": "INGESTION_GOLD_TABLES_ORCHESTRATOR",
	"properties": {
		"activities": [
			{
				"name": "UPDATES COUNT",
				"type": "Lookup",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
